== Inicializar valores
=declararparm   vet0  int 0
=declararparm   vet1  int 1
=declararparm   vet2  int 2


=declararparm   red     int 0
=declararparm   blue    int 1
=declararparm   green   int 2
=declararparm   yellow  int 3

=declararparm   ini int 0
=declararparm   fim int 1

=declararparm   status0 char 'D'
=declararparm   status1 char 'F'
=declararparm   status2 char 'J'

=declararparm   OK              int  0
=declararparm   FaltouMemoria   int  1
=declararparm   CorInvalida     int  2
=declararparm   FinalErrado     int  3
=declararparm   JaExiste        int  4
=declararparm   NaoExiste       int  5
=declararparm   StatusErrado    int  6
=declararparm   IdxInvalido     int  7


==criar vetor de peca corretamente
=criarvetpeca   vet0    OK

== Criar pecas vermelhas corretamente
=criarpeca      vet0   0   red   OK
=criarpeca      vet0   1   red   OK
=criarpeca      vet0   2   red   OK
=criarpeca      vet0   3   red   OK

==Criar peca azul com erro
=criarpeca      vet0   0   blue  JaExiste

==Destruir peca vermelha
=destruirpeca   vet0   0   OK

==Obter informacoes sem erro
=obterstatus    vet0   1   OK

==Obter informacoes com erro
=obterstatus    vet0   0   NaoExiste

==Atualiza peca sem erro
=atualizapeca   vet0   1   ini   status0   OK



==Atualiza peca com erro
=atualizapeca   vet0   0   ini   status0   NaoExiste


==Destruir peca corretamente
=destruirpeca   vet0   1   OK
=destruirpeca   vet0   2   OK
=destruirpeca   vet0   3   OK

